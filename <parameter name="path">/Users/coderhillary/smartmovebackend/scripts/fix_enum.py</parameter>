<parameter name="content">#!/usr/bin/env python3
"""
Script to fix PostgreSQL ENUM type issue for the role column.
Drops the old userrole enum and converts role column to VARCHAR.
"""
import os
import sys

# Add parent directory to path
sys.path.insert(0, os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from app import create_app
from app.extensions import db


def fix_enum():
    """Drop userrole enum and convert role to VARCHAR."""
    app = create_app()
    
    with app.app_context():
        try:
            # Drop the enum type if it exists (cascade to drop dependent objects)
            db.session.execute(db.text("DROP TYPE IF EXISTS userrole CASCADE;"))
            
            # Alter the column type
            db.session.execute(db.text("ALTER TABLE users ALTER COLUMN role TYPE VARCHAR(50);"))
            
            # Commit the changes
            db.session.commit()
            print("✅ Successfully converted role column from ENUM to VARCHAR")
            return True
        except Exception as e:
            db.session.rollback()
            print(f"❌ Error fixing enum: {e}")
            return False


if __name__ == "__main__":
    success = fix_enum()
    sys.exit(0 if success else 1)
</parameter>
